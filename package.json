{
  "name": "@openuji/speculator",
  "version": "0.3.0",
  "description": "A TypeScript library for processing ReSpec-like markup with markdown support",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/browser.d.ts",
      "browser": "./dist/browser.js",
      "node": "./dist/node.js",
      "import": "./dist/browser.js",
      "require": "./dist/browser.cjs",
      "default": "./dist/browser.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/browser.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "linkedom": ">=0.18.0",
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "linkedom": {
      "optional": true
    }
  },
  "scripts": {
    "build": "tsup src/browser.ts src/node.ts --format cjs,esm --dts --external linkedom --clean --out-dir dist",
    "build:watch": "tsup src/browser.ts src/node.ts --format cjs,esm --dts --external linkedom --watch --out-dir dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepublishOnly": "npm run build && npm test",
    "dev": "concurrently \"npm run build:watch\" \"npm run test:watch\""
  },
  "keywords": [
    "speculator",
    "respec",
    "markdown",
    "documentation",
    "html",
    "typescript",
    "web-standards",
    "w3c"
  ],
  "author": "Seva Dolgopolov https://linked.in/in/seva_dolgopolov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/openuji/speculator.git"
  },
  "bugs": {
    "url": "https://github.com/openuji/speculator/issues"
  },
  "homepage": "https://github.com/openuji/speculator#readme",
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/jest": "^29.5.14",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20.9.0",
    "@types/webidl2": "^24.4.3",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^22.1.0",
    "linkedom": "^0.18.11",
    "ts-jest": "^29.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "markdown-it": "^14.1.0",
    "webidl2": "^24.5.0"
  }
}
